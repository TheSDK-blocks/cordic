#!/usr/bin/env bash
# Test changes
THISDIR=$( cd `dirname $0` && pwd )
MODULE=$( basename ${THISDIR})

#Defines TheSDK environment variables
. ${THISDIR}/../../TheSDK.config

#echo "Configuring FFT chisel generator"
#cd $THISDIR/chisel && ./configure && cd ..

CURRENTFILE=${THISDIR}/Makefile
echo "Generating Makefile"

cat << EOF > ${THISDIR}/Makefile

.PHONY: all sim chisel clean

#all: chisel sim
all: sim

models ?= py
mantissa_bits ?= 4
fraction_bits ?= 12
iterations ?= 14
cordic_ops ?= Sine,Cosine

MAINPARAMS_PY = --models \$(models) --mantissa-bits \$(mantissa_bits) --fraction-bits \$(fraction_bits) \\
--iterations \$(iterations) --cordic-ops \$(cordic_ops)

chisel/Makefile:
	cd chisel && ./configure

sim: chisel
	cd ${THISDIR}/${MODULE} && \\
	${PYL} __init__.py \$(MAINPARAMS_PY) || (echo "make sim failed $$?"; exit 1)

show:
	cd ${THISDIR}/${MODULE} && \\
	${PYL} __init__.py --show || (echo "make sim failed $$?"; exit 1)

chisel: chisel/Makefile
	cd $THISDIR/chisel && \\
	\$(MAKE) CordicAccelerator VERILOGDIR=${THISDIR}/sv

doc:
	cd $THISDIR/doc && \\
	make html || (echo "make sim failed $$?"; exit 1)

clean:
	#cd ${THISDIR}/chisel && \\
	#make clean && \\
	rm -rf ${THISDIR}/simulations/* 
   
EOF
exit 0

